<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:uxap="sap.uxap"
    xmlns:form="sap.ui.layout.form">
    <uxap:ObjectPageSection title="Adresse"
        visible="false" id="addressSection">
        <uxap:subSections>
            <uxap:ObjectPageSubSection>
                <form:Form editable="true">
                    <form:layout>
                        <form:ColumnLayout columnsL="2" />
                    </form:layout>
                </form:Form>
                <VBox>
                    <HBox>
                        <Label class="sapUiTinyMarginEnd"
                            text="{i18n>Street}:" />
                        <Text text="{Street} {Building}" />
                    </HBox>
                    <HBox>
                        <Label class="sapUiTinyMarginEnd"
                            text="{i18n>CountryCodeCity}:" />
                        <Text text="{Country}/ {PostalCode}/ {City}" />
                    </HBox>
                </VBox>
            </uxap:ObjectPageSubSection>
        </uxap:subSections>
    </uxap:ObjectPageSection>
</core:FragmentDefinition>